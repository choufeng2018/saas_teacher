.bt-total{
  height: 120rpx;
  line-height: 120rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 0 20rpx;
  border-top: 1rpx solid #d8d8d8;
  width: 100%;
  position: fixed;
  bottom: 0;
}

.bt-total text:nth-of-type(1){
