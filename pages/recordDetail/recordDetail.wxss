}


.alertBox{
  position: fixed;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100vw;
  background: rgba(0, 0, 0, .4);
  display: flex;
  justify-content: center;
  align-items: center;
}

.alert{
  width: 670rpx;
  height: auto;
  border-radius: 20rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 40rpx;
}
.alertTle{
  margin: 20rpx 0;
}

.alert .cell-space text:nth-of-type(2){
  color: #a5a5a5!important;
}

