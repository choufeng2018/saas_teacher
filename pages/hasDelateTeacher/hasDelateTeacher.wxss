  flex-direction: row;
  justify-content: space-around;
  align-items: center
}
.stuTop image{
  width: 48rpx;
  height: 48rpx
}

.inner{
    position: absolute;
    top:0;
}

.inner.del{
    height: 272rpx;
    line-height: 272rpx;
    font-size: 28rpx;
    width: 120rpx;
    text-align: center;
    z-index: 4;
    right: -120rpx;
    color: #fff;
}

.hasjoined{
  height: 272rpx;
    line-height: 272rpx;
    font-size: 28rpx;
    width: 240rpx;
    text-align: center;
    z-index: 4;
    right: -240rpx;
    color: #fff;
    display: flex;
    flex-direction: row;
}
.hasjoined .joinItem{
  height: 272rpx;
  line-height: 272rpx;
  width: 120rpx;
}
.hasjoined .joinItem:nth-of-type(1){
  background: #77c6ff;
}
.hasjoined .joinItem:nth-of-type(2){
  background: #ff7967;
}
.inner.txt{
    box-sizing: border-box;
    width: 100%;
    z-index: 5;
    transition: left 0.2s ease-in-out;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.delateTeacher{
  display: flex;
