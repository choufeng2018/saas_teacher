/* pages/sendhomework/sendhomework.wxss */
.moveline{
  top: 44rpx;
  left: 114rpx;
  position: absolute;
  width: 0;
  height:8rpx;
background:#F76605;
border-radius:4rpx;
}


.top{
    background: #fff;
    padding: 40rpx;
    box-sizing: border-box;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #ebebeb;
}

.lesson_name{
    color: #333;
    font-size:32rpx;
    margin-bottom: 40rpx;
    height: 32rpx;
    line-height: 32rpx;
    /* margin-left: 20rpx; */
}
.topInfo{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    height: 24rpx;
    line-height: 24rpx;
    color: #a5a5a5;
    font-size: 28rpx;
    
}

.infoItem:nth-of-type(1){
    padding-right: 16rpx;
    position: relative;
}
.infoItem:nth-of-type(1)::before{
    content: '';
    position: absolute;
    height: 20rpx;
    background: #a5a5a5;
    width: 1rpx;
    top: 0rpx;
    right: 0;
    z-index: 999
}

.upLoad{
    margin: 80rpx auto;
    height: 68rpx;
    width: 272rpx;
    border-radius: 8rpx;
    box-sizing: border-box;
    /* border: 1rpx solid #F76605; */
    box-shadow: 0 0 0 1px #F76605 inset;
    text-align: center;
    line-height: 66rpx;
    font-size: 28rpx;
    color: #F76605
}

.center_cont{
    padding: 24rpx;
    background: #fff;
}

.h_name{
    margin-bottom: 40rpx;
    font-size: 28rpx;
    height: 92rpx;
    position: relative;
    background:#ebebeb;
    border-radius: 12rpx;
}

.restrict{
    position: absolute;
    right: 20rpx;
    height: 92rpx;
    line-height: 92rpx;
    top:0;
    z-index: 999;
    font-size: 24rpx;
    color: #a5a5a5
}
.h_name input{
    height: 104rpx;
    padding-left: 40rpx;
    color: #333333;
}

.condition{
    font-size: 28rpx;
    position: relative;
    height: 380rpx;
    background:#ebebeb;
    padding-bottom: 40rpx;
    border-radius: 12rpx;
}

.condition textarea{
    padding: 40rpx;
    overflow: scroll;
    color: #333333;
    line-height: 40rpx;
    width: 622rpx;
    vertical-align: middle;
}

.condition .restrict{
    bottom:32rpx;
top:auto;
right:40rpx;
height:32rpx;
line-height:32rpx;

}

.audioBox{
    height: 260rpx;
    box-sizing: border-box;
    padding: 32rpx;
    background: #fff;
    border-radius: 12rpx;
    width: 702rpx;
    margin: 24rpx;
    position: relative;
    
}

.btnsend{
    /* background: #fff; */
    padding: 20rpx 24rpx;
}

.buttons{
    width: 100%;
    height:96rpx;
    line-height: 96rpx;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    border-radius: 12rpx;
    background: #F76605 
}

.box {
padding-top: 20rpx;
width:670rpx;
overflow:hidden;
min-height: 120rpx;
padding-right: 20rpx;
}

.box .pic {
float:left;
margin-right:20rpx;
position:relative;
}

.box .pic image {
margin-bottom:20rpx;
width:118rpx;
height:118rpx;
border-radius:8rpx;
vertical-align:bottom;
}

.box .pic:nth-of-type(5n){
    margin-right: 0
}

.close {
  position:absolute;
  right:-16rpx;
  height:32rpx!important;
  width:32rpx!important;
  top:-16rpx;
}



